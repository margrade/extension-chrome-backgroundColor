{
  "manifest_version": 3,
  "name": "Hello Extensions",
  "description": "Base Level Extension",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "/img/mundo32.png",
      "48": "/img/mundo48.png",
      "128": "/img/mundo128.png"
    }
  },
  "icons": {
    "32": "/img/mundo32.png",
    "48": "/img/mundo48.png",
    "128": "/img/mundo128.png"
  },
  "content_scripts":[
    {
      "matches": ["https://www.google.com.ar/*"],
      "js": ["content_scripts.js"]
    }
  ]
  
}